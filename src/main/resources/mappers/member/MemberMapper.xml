<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.care.root.mybatis.member.MemberMapper">

	<!-- select문구 사용하기 위해 생성 --> <!-- DB컬럼과 DTO변수를 맞춰주는 용도 -->
	<resultMap type="com.care.root.member.dto.MemberDTO" id="member">
		<id property="id" column="id" /> <!-- primary값 설정 -->
		<result property="pw" column="pw"/> <!-- 그외 일반값 설정 -->
		<result property="addr" column="addr"/>
	</resultMap>
	
	<select id="getUser" resultMap="member"> <!-- resultMap을 통해 DB형식과 DTO형식을 맞춰줌 -->
		select * from membership where id = #{id}
	</select>
	

</mapper>